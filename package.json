{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .js",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "mocha --recursive src/**/*.spec.js",
    "test:unit:ci": "yarn test:unit:cover --config mocharc.unit.ci.js",
    "test:unit:cover": "nyc yarn test:unit",
    "test:integration": "mocha --recursive test/**/*.spec.js",
    "start:dev": "nodemon src",
    "start": "node src"
  },
  "nyc": {
    "reporter": ["lcov", "text"],
    "include": ["src/**/*.js"],
    "exclude": ["**/*.spec.js"],
    "temp-dir": "./output/nyc-output",
    "report-dir": "./output/test-coverage",
    "all": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "mongoose": "^5.4.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-restricted-globals": "^0.2.0",
    "mocha": "^7.1.0",
    "mocha-junit-reporter": "^1.23.3",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "supertest": "^4.0.2"
  }
}
